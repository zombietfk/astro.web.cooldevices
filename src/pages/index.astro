---
import BaseLayout from "../layouts/BaseLayout.astro";
import SectionHeader from "../components/SectionHeader.astro";
import PostCard from "../components/PostCard.astro";
---

<BaseLayout title="Monokai Blog">
    <h1 class="h1">Welcome to the Blog!</h1>
    <SectionHeader title="Latest Posts & Updates" />
    <div class="stack">
        <PostCard
            tone="cyan"
            title="Understanding Async JavaScript"
            date="January 12, 2022"
            excerpt="A deep dive into Promises, async/await, and asynchronous programming."
            href="/tutorials/javascript-tips"
        />
        <PostCard
            tone="orange"
            title="CSS Flexbox Guide"
            date="December 28, 2021"
            excerpt="Mastering the basics of CSS Flexbox layout."
            href="/tutorials/css-tricks"
        />
        <PostCard
            tone="purple"
            title="10 Creative Project Ideas"
            date="December 15, 2021"
            excerpt="Fun and innovative project ideas to try out."
            href="/ideas/project-ideas"
        />
    </div>
</BaseLayout>

<style>
    .stack {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }
    .featured {
        padding: 16px;
        box-shadow: none;
    }
    .row {
        display: flex;
        gap: 12px;
        align-items: flex-start;
    }
    .row i {
        color: var(--purple);
        margin-top: 2px;
    }
</style>
