---
import { TONE_MAP, type ToneMapKey } from "../utils/toneMap";

const { title, subtitle, tone = "orange", icon = "lightbulb" } = Astro.props;

const toneCssVar: string = TONE_MAP[tone as ToneMapKey] ?? "var(--cyan)";
---

<div class="section" style={`--tone:${toneCssVar}`}>
  <div class="row">
    <h2 class="title h2 no-margin">{title}</h2>
    {subtitle && <div class="muted sub">{subtitle}</div>}
  </div>
  <hr class="rule" />
</div>

<style>
  .no-margin {
    margin: 0;
  }
  .section {
    margin-top: 18px;
  }
  .row {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: 12px;
  }
  .sub {
    font-family: var(--font-mono);
    font-size: 12px;
  }
  .rule {
    height: 1px;
    background: var(--border);
    margin-bottom: 10px;
    border-style: dashed;
  }
  .title {
    color: var(--tone);
  }
</style>
