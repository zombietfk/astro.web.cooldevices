---
const { title = "Monokai Blog", subtitle = "Code & Concepts" } = Astro.props;
---

<div class="surface brand">
  <div class="title">
    <div class="brandline">
      <span class="logo">â—†</span>
      <span class="name">{title}</span>
    </div>
    <div class="sub muted">{subtitle}</div>
  </div>
</div>

<style>
  .brand {
    padding: 12px 12px 14px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12px;
    box-shadow: none;
  }
  .title {
    min-width: 0;
  }
  .brandline {
    display: flex;
    align-items: center;
    gap: 10px;
    font-weight: 900;
    letter-spacing: 0.2px;
  }
  .logo {
    color: var(--green);
    font-family: var(--font-mono);
  }
  .name {
    color: var(--text);
    font-size: 18px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .sub {
    font-size: 12px;
    font-family: var(--font-mono);
  }
  .chip {
    font-family: var(--font-mono);
    border: 1px solid var(--border);
    background: rgba(0, 0, 0, 0.18);
    padding: 6px 10px;
    border-radius: 999px;
    color: var(--accent);
    white-space: nowrap;
  }
</style>
